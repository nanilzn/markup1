html
head
   meta(charset="UTF-8")
   title Document
   link(rel="stylesheet" href="style.css")
body

   include bem/text-field/text-field.pug
   include bem/masked-text-field/masked-text-field.pug
   include bem/dropdown/dropdown.pug
   include bem/checkbox-buttons/checkbox-buttons.pug
   include bem/radio-buttons/radio-buttons.pug
   
   .form-elements-base
      .uikit-logo-wrapper
         img(src=require('./svg/logo.svg').default, alt="")
      .uikit__text-field-wrapper
         +text-field('Text field', 'Default', 'Email')
      .uikit__text-field-hover-wrapper
         +text-field_hover('Text field', 'Hover / Focus', 'This is pretty awesome')
      .uikit__dropdown-default1-wrapper
         +dropdown_default1('Dropdown', 'Default', 'Сколько гостей')
      .uikit__masked-text-field-wrapper
         +masked-text-field('Masked text field')
      .uikit__date-dropdown-wrapper-1
         +dropdown('Date dropdown', 'ДД.ММ.ГГГГ')
      .uikit__date-dropdown-wrapper-2
         +dropdown('Date dropdown', '19.08.2019')
      .uikit__filter-date-dropdown-wrapper
         +dropdown('Filter date dropdown', '19 авг - 23 авг')
      .uikit__dropdown-default2-wrapper
         +dropdown_default2('Dropdown', 'Default', '2 спальни, 2 кровати...')
      .uikit__dropdown-expanded-wrapper
         +dropdown_expanded('Dropdown', 'Expanded', '2 спальни, 2 кровати...', ['спальни', 'кровати', 'ванные комнаты'], [2, 2, 0])
      .uikit__dropdown-opened1-wrapper
         +dropdown_expanded2('Dropdown', '', 'Сколько гостей', ['взрослые', 'дети', 'младенцы'], [0, 0, 0])
      .uikit__dropdown-opened2-wrapper
         +dropdown_expanded3('Dropdown', '', '3 гостя', ['взрослые', 'дети', 'младенцы'], [2, 1, 0])
      .uikit__subscription-text-field-wrapper
         +text-field('Subscription text field', '', 'Email', true)
      .uikit__checkbox-buttons-wrapper
         +checkbox-buttons('Checkbox buttons')
            +checkbox-buttons__row('checkbox1', 'checkbox1', 'Можно курить')
            +checkbox-buttons__row('checkbox2', 'checkbox2', 'Можно с питомцами', true)
            +checkbox-buttons__row('checkbox3', 'checkbox3', 'Можно пригласить гостей (до 10 человек)', true)
      .uikit__radio-buttons-wrapper
         +radio-buttons('Radio buttons')
            +radio-buttons__row('gender', 'maleID', 'male', 'femaleID', 'female', 'Мужчина', 'Женщина')