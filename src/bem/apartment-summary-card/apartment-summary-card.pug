mixin apartment-summary-card()
   .apartment-summary-card
      .apartment-summary-card__header
         .apartment-summary-card__number №
            span 888
            span.apartment-summary-card__number-status люкс
         .apartment-summary-card__cost 9 990₽
            span в сутки
      +date-dropdown('Прибытие', '19.08.2019', 'Выезд', '23.08.2019')
      h3(style='margin-top: 20px;') Гости
      +dropdown_([
            { name: 'взрослые', value: 0 },
            { name: 'дети', value: 0 },
            { name: 'младенцы', value: 0 }
         ], 'guests', 'apply', false)
      .apartment-summary-card__stats
         .apartment-summary-card__stats-row
            .apartment-summary-card__stats-entry 9 990₽ х 4 суток
            .apartment-summary-card__stats-sum 39 960₽
         .apartment-summary-card__stats-row
            .apartment-summary-card__stats-entry Сбор за услуги: скидка 2 179₽
            .apartment-summary-card__stats-info
               img(src=require('./bem/apartment-summary-card/apartment-summary-card__i.svg').default).apartment-summary-card__i-svg
            .apartment-summary-card__stats-sum 0₽
         .apartment-summary-card__stats-row
            .apartment-summary-card__stats-entry Сбор за дополнительные услуги
            .apartment-summary-card__stats-info
               img(src=require('./bem/apartment-summary-card/apartment-summary-card__i.svg').default).apartment-summary-card__i-svg
            .apartment-summary-card__stats-sum 300₽
      .apartment-summary-card__sum
         h2.apartment-summary-card__sum-word Итого
         .apartment-summary-card__sum-dot-line
         h2.apartment-summary-card__sum-value 38 081₽
      +button-arrow('Забронировать')(margin='margin-top: 20px;')