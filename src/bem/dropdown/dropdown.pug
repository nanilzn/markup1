mixin dropdown(name, defaultValue, values)
   .dropdown
      h3.dropdown__header=name
      div.dropdown__select.dropdown__select_expanded=defaultValue
         img(src=require('./bem/dropdown/dropdown__arrow.svg').default).dropdown__arrow
      ul.dropdown__list
         each val in values
            li.dropdown__list-item
               .dropdown__list-item-text= val
               .dropdown__counter
                  .dropdown__counter-button.dropdown__counter-button_disabled -
                  .dropdown__counter-value 0
                  .dropdown__counter-button +
         .dropdown__control
            .dropdown__clear Очистить
            .dropdown__apply Применить